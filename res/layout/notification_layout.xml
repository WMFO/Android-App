<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:src="@drawable/wmfo_icon" />

    <Button
        android:id="@+id/notificationLayout_stopButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="||" />

    <TextView
        android:id="@+id/notificationLayout_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/notificationLayout_details"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Artist"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notificationLayout_details"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/notificationLayout_artist"
        android:layout_toLeftOf="@+id/notificationLayout_stopButton"
        android:layout_toRightOf="@+id/imageView1"
        android:ellipsize="marquee"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Song - Album" />

</RelativeLayout>