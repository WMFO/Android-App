<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tiled_bg" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/mainscreen_controlLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadedback_solid" >

            <ImageView
                android:id="@+id/mainscreen_Button_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/play" />

            <ImageView
                android:id="@+id/mainscreen_volume_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/mainscreen_Button_play"
                android:layout_below="@+id/mainscreen_Button_play"
                android:src="@drawable/volume_1" />

            <com.tufts.wmfo.VerticalSeekBar
                android:id="@+id/mainscreen_volume_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mainscreen_Button_phone"
                android:layout_alignLeft="@+id/mainscreen_volume_icon"
                android:layout_below="@+id/mainscreen_volume_icon"
                android:layout_marginLeft="10dp"
                android:max="10" />

            <ImageView
                android:id="@+id/mainscreen_Button_phone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@+id/mainscreen_volume_control"
                android:layout_alignParentBottom="true"
                android:src="@drawable/phone" />
        </RelativeLayout>

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mainscreen_controlLayout" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/mainscreen_twitterListLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:minHeight="200dp" >
                    </ListView>

                    <ListView
                        android:id="@+id/mainscreen_playlistLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:minHeight="200dp" >
                    </ListView>
                    
                    <LinearLayout
                        android:id="@+id/empty"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:gravity="center"
						android:orientation="vertical"
						>
						
                        <ProgressBar
                            android:layout_width="wrap_content"
                        	android:layout_height="wrap_content"
                            />
                        
                        <TextView
                            android:layout_width="wrap_content"
                        	android:layout_height="wrap_content"
                        	android:text="@string/Loading"
                            />
                        
					</LinearLayout>

                    <ScrollView
                        android:id="@+id/mainscreen_archivePickerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <CalendarView
                                xmlns:tools="http://schemas.android.com/tools"
                                android:id="@+id/archive_datePickerCalendar"
                                android:layout_width="match_parent"
                                android:layout_height="229dp"
                                tools:ignore="NewApi" />

                           <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Play from"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <Spinner
                                    android:id="@+id/spinner_playFromHour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/hoursArray"
                                    android:spinnerMode="dropdown" />
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=" for "
                                    android:textAppearance="?android:attr/textAppearanceMedium" />
                                
                                <Spinner
                                    android:id="@+id/spinner_playDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@array/durationHoursArray"
                                    android:spinnerMode="dropdown" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/archive_playButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Play Archive"
                                />
                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>

</FrameLayout>